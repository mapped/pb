{
    "name": "Ubuntu",
    "image": "mcr.microsoft.com/devcontainers/base:jammy",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "installTools": true,
            "version": "3.10"
        },
        "ghcr.io/devcontainers-extra/features/poetry:2": {
            "version": "2.0.1"
        }
    },
    "mounts": [
        "source=${localEnv:DEV_CONTAINER_SSH_KEY_PATH},target=/home/vscode/.ssh/id_rsa,type=bind,consistency=cached",
        "source=${localEnv:DEV_CONTAINER_SSH_KNOWN_HOSTS_PATH},target=/home/vscode/.ssh/known_hosts,type=bind,consistency=cached"
    ],
    "remoteEnv": {
        "FURY_SECRET": "${localEnv:FURY_SECRET}"
    },
    "postCreateCommand": "./.devcontainer/postCreateCommand.sh"
}